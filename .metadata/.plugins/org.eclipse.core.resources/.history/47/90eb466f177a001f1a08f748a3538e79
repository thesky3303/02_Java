package com.hw3.model.dto;

public class Toy {

	private String name;
	private int age;
	private int price;
	private String color;
	private int day;
	private String meta;
	private String meta2;
	private String meta3;
	
	public Toy() {}
	
	public Toy(String name, int age, int price, String color, int day, String meta, String meta2, String meta3) {
		super();
		this.name = name;
		this.age = age;
		this.price = price;
		this.color = color;
		this.day = day;
		this.meta = meta;
		this.meta2 = meta2;
		this.meta3 = meta3;
	}


	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public int getAge() {
		return age;
	}

	public void setAge(int age) {
		this.age = age;
	}

	public int getPrice() {
		return price;
	}

	public void setPrice(int price) {
		this.price = price;
	}

	public String getColor() {
		return color;
	}

	public void setColor(String color) {
		this.color = color;
	}

	public int getDay() {
		return day;
	}

	public void setDay(int day) {
		this.day = day;
	}

	public String getMeta() {
		return meta;
	}

	public void setMeta(String meta) {
		this.meta = meta;
	}

	public String getMeta2() {
		return meta2;
	}

	public void setMeta2(String meta2) {
		this.meta2 = meta2;
	}

	public String getMeta3() {
		return meta3;
	}

	public void setMeta3(String meta3) {
		this.meta3 = meta3;
	}

	@Override
	public String toString() {
		return "장난감 이름 : " + name + " " + "사용 연령 : " + age + " " + "가격 : "
	           + price + " " + "색상 : " + color + " " + "제조년월일 : "
			   + day + " " + "\n재료 : " + meta+ ", "+ meta2+ meta3+"\n";
	}
	
	
	
	

}
